<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions -->
    <record id="action_safaricom_statement" model="ir.actions.act_window">
        <field name="name">Statements</field>
        <field name="res_model">safaricom.statement</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <record id="action_safaricom_account_partner" model="ir.actions.act_window">
        <field name="name">Safaricom Accounts</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('is_safaricom_account', '=', True)]</field>
        <field name="context">{'default_is_safaricom_account': True, 'search_default_safaricom_accounts': 1}</field>
    </record>
    
    <record id="action_safaricom_subscriber_partner" model="ir.actions.act_window">
        <field name="name">Safaricom Subscribers</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('is_safaricom_subscriber', '=', True)]</field>
        <field name="context">{'default_is_safaricom_subscriber': True, 'search_default_safaricom_subscribers': 1}</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_safaricom_billing_root" name="Safaricom Billing" web_icon="safaricom_consolidated_billing,static/description/icon.png" sequence="20"/>

    <menuitem id="menu_safaricom_statements" 
              name="Statements" 
              parent="menu_safaricom_billing_root" 
              action="action_safaricom_statement" 
              sequence="10"/>

    <menuitem id="menu_safaricom_accounts"
              name="Accounts"
              parent="menu_safaricom_billing_root"
              action="action_safaricom_account_partner"
              sequence="20"/>

    <menuitem id="menu_safaricom_subscribers"
              name="Subscribers"
              parent="menu_safaricom_billing_root"
              action="action_safaricom_subscriber_partner"
              sequence="30"/>
</odoo>
