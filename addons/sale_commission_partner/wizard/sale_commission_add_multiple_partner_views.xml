<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_commission_plan_partner_wizard_view_form" model="ir.ui.view">
        <field name="name">sale.commission.plan.partner.wizard.form</field>
        <field name="model">sale.commission.plan.partner.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Multiple Agents">
                <group class="oe_title">
                    <field name="partner_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="submit" string="Submit" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_commission_add_multiple_partner" model="ir.actions.act_window">
        <field name="name">Add Agents</field>
        <field name="res_model">sale.commission.plan.partner.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sale_commission_plan_partner_wizard_view_form"/>
        <field name="context">{'active_plan_id': active_ids}</field>
        <field name="target">new</field>
    </record>

</odoo>
