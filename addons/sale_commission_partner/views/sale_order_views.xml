<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_agent" model="ir.ui.view">
        <field name="name">sale.order.form.agent</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="agent_id"/>
            </field>
            <xpath expr="//field[@name='order_line']/list/field[@name='name']" position="after">
                <field name="agent_id" optional="show"/>
                <field name="commission_amount" optional="show" widget="monetary"/>
            </xpath>
        </field>
    </record>
</odoo>
