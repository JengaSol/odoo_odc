<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_view_form_commission" model="ir.ui.view">
        <field name="name">res.partner.view.form.commission</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <!-- Add smart button if needed, or just a tab -->
            </div>
            <page name="sales_purchases" position="after">
                <page string="Commissions" name="commissions">
                    <field name="commission_plan_ids">
                        <list editable="bottom">
                            <field name="plan_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </list>
                    </field>
                </page>
            </page>
        </field>
    </record>
</odoo>
